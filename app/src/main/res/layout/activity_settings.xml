<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        app:civ_border_color="@color/design_default_color_primary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:id="@+id/prof_name"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textAlignment="gravity"
        android:hint="Enter the Username you want"

        android:gravity="center"
        android:drawableStart="@drawable/edit_profile"
        android:drawableLeft="@drawable/edit_profile"
android:background="@drawable/res2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
android:padding="6dp"

        >

    </EditText>

    <EditText
        android:id="@+id/prof_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/res2"
        android:drawableStart="@drawable/edit_status"
        android:drawableLeft="@drawable/edit_status"
        android:gravity="center"
        android:inputType="textPersonName"
        android:padding="7dp"
        android:hint="Enter the status"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="15sp"

        android:textStyle="bold">

    </EditText>
    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof_status"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/res1"
        android:gravity="center"
       android:text="Update"
        android:padding="7dp"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold">

    </Button>
</RelativeLayout>