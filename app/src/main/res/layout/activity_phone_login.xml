<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLogin">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/phone_number"
    android:layout_alignParentStart="true"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="17dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/res2"
    android:padding="8dp"
    android:hint="Enter your phone number"
    android:textAllCaps="false"
    android:textSize="15sp"
    android:textColor="#000000"
    android:drawableStart="@drawable/phone"
    android:textAlignment="center"
    android:textStyle="bold">

</EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number"
        android:id="@+id/phone_number_verification"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/res2"
        android:padding="8dp"
        android:hint="Verification Code"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:visibility="invisible"
        android:textColor="#000000"
        android:drawableStart="@drawable/password"
        android:textAlignment="center"
        android:textStyle="bold">

    </EditText>

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_verification"
        android:layout_marginStart="17dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/res1"
        android:layout_marginEnd="17dp"
        android:text="Request for verification code"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="19sp">

    </Button>
    <Button
      android:id="@+id/verifies_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifyButton"
        android:layout_marginStart="17dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/res1"
        android:layout_marginEnd="17dp"
        android:visibility="invisible"
        android:text="Click to verify"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="19sp">

    </Button>

</RelativeLayout>